services:
  portainer_agent:
    image: portainer/agent:2.33.2
    container_name: portainer_agent
    restart: {{ docker_portainer_agent_restart_policy }}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes

{% if docker_portainer_agent_ports %}
    ports:
{% for line in docker_portainer_agent_ports %}
      - "{{ line }}"
{% endfor %}
{% endif %}
